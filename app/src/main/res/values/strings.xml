    <!-- Options screen / Changelog -->
    <string name="options_changelog_app_updated">The app has been updated</string>
    <string name="options_changelog_what_is_new">What\'s new</string>
    <string name="options_changelog_0_8_0_version_name" translatable="false">v0.8</string>
    <string name="options_changelog_0_8_0_description">
        <Data><![CDATA[
        • <strong>Search</strong> button on the Home and Collections screens<br>
        • Smarter <strong>search algorithm</strong><br>
        • Optional <strong>buy me a beer</strong> feature for supporting the development
        ]]></Data>
    </string>
    <string name="options_changelog_0_7_0_version_name" translatable="false">v0.7</string>
    <string name="options_changelog_0_7_0_description">
        <Data><![CDATA[
        • <strong>Home screen</strong> that contains song and collection suggestions<br>
        • <strong>Fast scroller</strong> on the Songs screen
        ]]></Data>
    </string>
    <string name="options_changelog_0_6_0_version_name" translatable="false">v0.6</string>
    <string name="options_changelog_0_6_0_description">
        <Data><![CDATA[
        • <strong>Onboarding flow</strong> where users can customize their experience<br>
        • <strong>Romanian</strong> translation<br>
        • Major <strong>design improvements</strong>
        ]]></Data>
    </string>
    <string name="options_changelog_0_5_0_version_name" translatable="false">v0.5</string>
    <string name="options_changelog_0_5_0_description">
        <Data><![CDATA[
        • <strong>Language switcher</strong> preference and <strong>Hungarian</strong> translation<br>
        • Option for automatically switching between <strong>dark</strong> and <strong>light</strong> themes based on the time of the day<br>
        • Optional <strong>analytics tracking</strong> and <strong>crash reporting</strong>
        ]]></Data>
    </string>
    <string name="options_changelog_0_4_0_version_name" translatable="false">v0.4</string>
    <string name="options_changelog_0_4_0_description">
        <Data><![CDATA[
        • <strong>Collections</strong> screen with public, thematic playlists<br>
        • Pinch-to-zoom gesture to adjust the <strong>font size</strong><br>
        • <strong>Shuffle</strong> button to open a list of songs in a random order
        ]]></Data>
    </string>
    <string name="options_changelog_0_3_0_version_name" translatable="false">v0.3</string>
    <string name="options_changelog_0_3_0_description">
        <Data><![CDATA[
        • The ability to create local <strong>playlists</strong><br>
        • <strong>Paginated</strong> song detail screens for songs opened from a playlist<br>
        • Support for <strong>app shortcuts</strong> on and above Android 7.1
        ]]></Data>
    </string>
    <string name="options_changelog_0_2_0_version_name" translatable="false">v0.2</string>
    <string name="options_changelog_0_2_0_description">
        <Data><![CDATA[
        • Individually <strong>transpose</strong> songs and automatically save the selected key<br>
        • <strong>Auto-scroll</strong> feature with adjustable speed<br>
        • <strong>History</strong> screen which shows the last time the different songs were opened in reverse chronological order
        ]]></Data>
    </string>
    <string name="options_changelog_0_1_0_version_name" translatable="false">v0.1</string>
    <string name="options_changelog_0_1_0_description">
        <Data><![CDATA[
        • <strong>Song library</strong> screen with options to search, sort and filter<br>
        • <strong>Song detail</strong> screen where the visibility of the chords can be toggled<br>
        • <strong>Offline caching</strong> with the ability to individually remove the downloaded songs
        ]]></Data>
    </string>

